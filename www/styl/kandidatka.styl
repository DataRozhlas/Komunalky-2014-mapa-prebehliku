.ig
  &.kandidatka-active .kandidatka-wrap
    left 0px !important

  .kandidatka-wrap
    position absolute
    top 0px
    left -100%
    width 100%
    bottom 0px
    z-index 2000
    transition left 0.6s
    .kandidatka
      width 100%
      height 100%
      overflow auto
      background white
      a.closebtn
        position absolute
        top 18px
        left 18px
        width 40px
        height 40px
        border 3px solid ColorHeadingLink
        border-radius 50%
        background white
        overflow hidden
        svg
          position absolute
          top -2px
          left -2px
          width @width
          height @height
          path
            fill ColorHeadingLink
        &:hover
          background lighten(ColorHeadingLink, 90%)
          cursor pointer
        &:active
          background ColorHeadingLink
          svg
            path
              fill white
      h1
        font-size 1.8em
        color ColorHeadingLink
        margin 0px
        padding 30px 15px 29px 91px
      table.data-table
        border-collapse collapse
        width 100%
        td
        th
          margin 0px
        td
          padding 2px 5px
        th
          background ColorRadiozurnal
          border-bottom 1px solid darken(ColorRadiozurnal, 20%)
          color white
          padding 5px 5px
          text-align left
          .name
            text-decoration underline
            &:hover
              text-decoration none
              cursor pointer
        thead
          th:nth-child(4) select
            width 82px
          th:nth-child(5) select
            width 58px
          th:nth-child(6) select
            width 74px
        td:nth-child(4)
        th:nth-child(4)
          height 42px
        tbody
          tr
            td
              text-overflow ellipsis
            &:nth-child(2n) td
              background #f2f2f2
            &.prebehlik td
              background lighten(ColorRadiozurnal, 80%)





